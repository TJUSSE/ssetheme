$slider-desc-height = 150px
$title-color = lighten($primary-color, 10%)

.fp__slider
  height: 100%
  position: relative
  overflow: hidden
  background: #444

.index--slider--data
  display: none

.index__slider__spinner
  position: absolute
  top: 0
  left: 0
  z-index: 60
  width: 100%
  bottom: $slider-desc-height
  background: rgba(#000, 0.4)
  visibility: hidden
  opacity: 0
  transition: visibility 0s linear 0.2s, opacity 0.2s linear

.index__slider__spinner--show
  visibility: visible
  opacity: 1
  transition-delay: 0s

.index__slider__spinner .sk-folding-cube
  position: absolute
  left: 50%
  top: 50%
  width: 50px
  height: 50px
  margin-top: -25px
  margin-left: -25px

.index__slider
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%

.index__slider__stage
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%

.index__slider__image-area
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  z-index: 40

.index__slider__desc
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  z-index: 50
  height: $slider-desc-height
  background: rgba(#000, 0.8)

  & > .content-container
    position: relative
    height: $slider-desc-height

.index__slider__content-area
  position: absolute
  left: 0
  top: 0
  right: 200px
  height: 100%

.index__slider__control-area
  position: absolute
  right: 0
  height: 50px
  margin-top: -25px
  top: 50%
  width: 200px
  text-align: right

.index__slider__control-item
  user-select: none
  color: #fff
  padding: 0 6px
  cursor: pointer
  line-height: 50px

.index__slider__circle--activated
  color: $title-color

.index__slider__item
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  opacity: 0
  transition: opacity .5s linear

.index__slider__item--shown
  opacity: 1

.index__slider__image
  background-size: cover
  background-position: center center

.index__slider__text
  padding-top: 30px
  color: #FFF
  h2
    color: $title-color
    margin-bottom: 10px
  
  &.without--body
    padding-top: 0
    h2
      margin: 0
      line-height: $slider-desc-height

.index__slider__move
  position: absolute
  width: 85px
  height: 100%
  outline: 0
  cursor: pointer
  opacity: 0
  z-index: 120
  text-align: center
  transition: opacity linear 0.2s
  background: rgba(#000, 0.3)

.index__slider__move:hover
  opacity: 1

.index__slider__move.index__slider__role-prev
  left: 0

.index__slider__move.index__slider__role-next
  right: 0

.index__slider__move > i
  color: #fff
  position: absolute
  line-height: 30px
  font-size: 30px
  top: 50%
  left: 50%
  margin-top: -15px
  margin-left: -15px
