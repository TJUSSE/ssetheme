$news-navigation-border-color = #EEE
$news-navigation-border-color-hover = #CCC

.news-list__row
  position: relative

.news-list__col
  float: left
  width: 33%

.news-list__col-inner
  padding-right: 10px

.view-news-list .pager
  margin: 40px 0
  padding: 0
  border-top: 2px solid $news-navigation-border-color
  text-align: center
  font-size: 14px
  
  a, a:visited, a:active
    display: inline-block
    padding: 5px 10px
    text-decoration: none
    border: 0
    color: darken($news-navigation-border-color, 30%)
  
  a:hover
    color: darken($news-navigation-border-color-hover, 50%)

  li
    display: inline-block
    list-style: none
    margin: -2px 0 0 0
    border-top: 2px solid $news-navigation-border-color
    
    &:hover
      border-color: $news-navigation-border-color-hover
  
  .pager-current
    padding: 5px 10px
    color: $section-colors['news'] !important
    border-color: $section-colors['news'] !important
