// override
body.admin-menu.adminimal-menu:before
  display: none

.header
  height: 380px
  position: relative
  background-repeat: no-repeat
  background-position: center bottom

.header__background
  position: absolute
  left: 0
  width: 100%
  top: 0
  height: 100%
  z-index: 0
  background: url(../img/logo-bg.png) repeat-x

.header .content-container
  position: relative
  z-index: 1

for $section-name in $section-colors
  .body-section-{$section-name} .header
    background-image: url(../img/banners/$section-name.jpg)

.header__logo-container
  margin-top: 40px

.header__logo
  display: inline-block
  max-width: 80%

+below(rupture.desktop-cutoff)
  // 非桌面时，header 高度与宽度成比例
  .header
    height: auto
    background-size: cover
    &::after
      // 16:9
      padding-top: unit(380/1050*100, '%')
      display: block
      content: ''
    .content-container
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
  
  // logo 正中央
  .header__logo-container
    text-align: center
  
// retina 下图片 2x
+retina()
  .header__background
    background: url(../img/logo-bg@2x.png) repeat-x
    
  .header__logo
    background: url(../img/logo@2x.png) no-repeat
