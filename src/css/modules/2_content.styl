.content-has-sidenav
  .sidenav
    col(1/4)
  .main-content
    col(3/4)

+below(780px)
  .content-has-sidenav
    .main-content
      stack()

.intro--two-col
  .group-left
    width: 70%
  .group-right
    width: 26%
  &.group-one-column
    .group-left, .group-right
      width: 100%

.content-has-sidenav
  .intro--two-col
    .group-left
      width: 64%
    .group-right
      width: 32%
    &.group-one-column
      .group-left, .group-right
        width: 100%

.main-content
  margin-bottom: 50px

#page-title
  margin-top: 20px

.breadcrumb-container
  font-size: 14px
  color: #888
  margin-top: 20px

.breadcrumb__item, .breadcrumb__item:visited, .breadcrumb__item:active
  color: #AAA
  text-decoration: none

.breadcrumb__item--link:hover
  color: #444
  text-decoration: underline
