.content-has-sidenav
  .sidenav
    col(1/4)
  .main-content
    col(3/4)

+below(780px)
  .content-has-sidenav
    .main-content
      stack()

.intro-layout--two-col
  .intro__left
    col(7/10)
  .intro__right
    col(3/10)

.content-has-sidenav
  .intro-layout--two-col
    .intro__left
      col(4/6)
    .intro__right
      col(2/6)

+below(1000px)
  .intro-layout--two-col
    .intro__left, .intro__right
      stack()

.main-content
  margin-bottom: 50px

.title-section--wide
  position: absolute
  left: 0
  bottom: 0
  width: 100%
  padding: 30px 0
  background: rgba(#222, 95%)
  
  .page__title
    margin-top: 5px

for $section-name, $section-color in $section-colors
  .body-section-{$section-name} .title-section--wide .page__title
    color: lighten($section-color, 30%)

.breadcrumb-container
  font-size: 14px
  color: #888

.breadcrumb__item, .breadcrumb__item:visited, .breadcrumb__item:active
  color: #AAA
  text-decoration: none

.breadcrumb__item--link:hover
  text-decoration: underline
  
.title-section--box
  .breadcrumb__item--link:hover
    color: #444

.title-section--wide
  .breadcrumb__item--link:hover
    color: #FFF

.title-section--box
  .page__title
    margin-top: 20px
    margin-bottom: 0.6em
    line-height: 1.35

  .breadcrumb-container
    margin-top: 20px

.content-no-sidenav
  .intro-col__inner
    margin-top: 40px
