.rightbar__module
  background: #F8F8F8
  padding: 25px
  padding-bottom: 15px
  margin-bottom: 30px

.rightbar__module > h3
  margin-top: 0
  margin-bottom: 20px
  color: #9D9D9D

.typo .relative-link__item
  margin: 15px 0
  color: #888888
  word-break: break-all
  position: relative
  padding-left: 26px
  font-size: 14px
  line-height: 26px
  
  i
    position: absolute
    color: #C9C9C9
    font-size: 16px
    line-height: 26px
    left: 0
    top: 0
  
  a, a:visited, a:active
    color: #888888
    border-bottom: 0
  
  a:hover
    color: #888888
    border-bottom: 1px solid #888888
