$slider-width  = 1250px
$slider-height = 350px
$slider-bottom-height = 25px
$fade-in-out-interval = 0.4s

.spinner
  margin: 0 auto
  width: 20px
  height: 20px
  position: relative


.container1 > div, .container2 > div, .container3 > div
  width: 6px
  height: 6px
  background-color: #333

  border-radius: 100%
  position: absolute
  animation: bouncedelay 1.2s infinite ease-in-out
  animation-fill-mode: both


.spinner .spinner-container
  position: absolute
  top: 165px
  width: 100%
  height: 100%


.container2
  transform: rotateZ(45deg)


.container3
  transform: rotateZ(90deg)


.circle1
  top: 0
  left: 0 
.circle2
  top: 0
  right: 0 
.circle3
  right: 0
  bottom: 0 
.circle4
  left: 0
  bottom: 0 

.container2 .circle1
  animation-delay: -1.1s


.container3 .circle1
  animation-delay: -1.0s


.container1 .circle2
  animation-delay: -0.9s


.container2 .circle2
  animation-delay: -0.8s


.container3 .circle2
  animation-delay: -0.7s


.container1 .circle3
  animation-delay: -0.6s


.container2 .circle3
  animation-delay: -0.5s


.container3 .circle3
  animation-delay: -0.4s


.container1 .circle4
  animation-delay: -0.3s


.container2 .circle4
  animation-delay: -0.2s


.container3 .circle4
  animation-delay: -0.1s

@keyframes bouncedelay
  0%, 80%, 100%
    transform: scale(0.0)
  
  40%
    transform: scale(1.0)


.sse-slider
  display block
  position relative
  margin 0 auto
  width $slider-width
  min-height $slider-height
  overflow hidden

.sse-slider--hidden
  display none

.sse-slider--indicator
  display block
  position absolute
  top 0
  left 0
  text-align center
  font-size 2em
  margin auto
  z-index 9996
  width 100%
  height $slider-height
  background #ddd

.sse-slider ul
  list-style none
  margin 0 auto
  padding 0

.sse-slider img
  z-index 9997
  display block
  position absolute
  top 0
  left 0
  opacity 0
  transition all ease-in $fade-in-out-interval

.sse-slider .is-show
  opacity 1

.sse-slider .is-loading

.sse-slider--control-prev, .sse-slider--control-next
  display inline-block
  position absolute
  top 0
  height $slider-height

.sse-slider--control-prev button,
.sse-slider--control-next button
  width 85px
  height $slider-height
  border none
  color black
  outline 0
  font-size 2em
  line-height $slider-height
  text-align center
  background none
  cursor pointer
  opacity 0

  transition opacity linear 0.2s

.sse-slider--control-prev button:hover,
.sse-slider--control-next button:hover
  opacity 1

.sse-slider--control-prev
  z-index 9999
  //top 0
  left 0

.sse-slider--control-next
  z-index 9998
  //top 0
  right 0
  //left $slider-width - 85px

.sse-slider--round-ctrl
  display block
  position absolute
  //bottom $slider-bottom-height
  bottom 0
  z-index 10000
  width 100%
  height $slider-bottom-height
  margin 0 auto
  text-align center

.sse-slider--round-ctrl button
  border none
  background none
  color white
  padding 0 8px
  cursor pointer
  outline none

.sse-slider--activated
  color dodgerblue !important
